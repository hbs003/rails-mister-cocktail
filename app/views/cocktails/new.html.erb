<div>
  <%= render 'shared/navbar' %>
  <div>
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1461823385004-d7660947a7c0?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=82c2b0959f392571810e512b4a73d625&auto=format&fit=crop&w=500&q=60');">
      <div class="banner-content">
        <h1>Create your favorite Cocktail</h1>
          <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, placeholder: "Insert the name of your cocktail here", label: false %>
          <p>Upload your cocktail photo below</p>
          <%= f.input :photo, label: false %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="footer">
    <div class="footer-links">
      <%= link_to "Cocktails", cocktails_path %>
      <a href="/"><i class="fa fa-glass-martini"></i></a>
    </div>
  </div>
</div>
