<div>
  <%= render 'shared/navbar' %>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1507123948929-86a949bdaa23?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=a5d65ee5a94e0bab030c5f698216b9da&auto=format&fit=crop&w=500&q=60');">
    <div class="banner-content">
      <h1>Creating new doses</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, placeholder: "Insert your doses here", label: false %>
        <p>Select one ingredient below</p>
        <%= f.association :ingredient, label: false %>
        <%= f.submit "add a dose", class: "btn btn-primary" %>
      <% end %>
      <hr>
      <%= link_to "Cocktails", cocktails_path %>
    </div>
  </div>
</div>

